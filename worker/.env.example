# Environment variables for App

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/supercheck

# AWS S3 / MinIO Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
S3_ENDPOINT=http://localhost:9000
S3_JOB_BUCKET_NAME=playwright-job-artifacts
S3_TEST_BUCKET_NAME=playwright-test-artifacts 
S3_FORCE_PATH_STYLE=true
S3_OPERATION_TIMEOUT=10000
S3_MAX_RETRIES=3

# App Config
NEXT_PUBLIC_APP_URL=http://localhost:3000
TEST_EXECUTION_TIMEOUT_MS=120000
JOB_EXECUTION_TIMEOUT_MS=900000
TRACE_RECOVERY_INTERVAL_MS=300000
RUNNING_CAPACITY=5
QUEUED_CAPACITY=10

# Demo Mode Configuration
NEXT_PUBLIC_DEMO_MODE=false

# Notification Channel Limits
NEXT_PUBLIC_MAX_JOB_NOTIFICATION_CHANNELS=10
NEXT_PUBLIC_MAX_MONITOR_NOTIFICATION_CHANNELS=10

# Playground Cleanup Configuration
PLAYGROUND_CLEANUP_ENABLED=true
PLAYGROUND_CLEANUP_CRON=*/15 * * * * 
PLAYGROUND_CLEANUP_MAX_AGE_HOURS=1

# Notification Channel Limits
MAX_JOB_NOTIFICATION_CHANNELS=10
MAX_MONITOR_NOTIFICATION_CHANNELS=10
NEXT_PUBLIC_MAX_JOB_NOTIFICATION_CHANNELS=10
NEXT_PUBLIC_MAX_MONITOR_NOTIFICATION_CHANNELS=10

# Monitor recent check query limit
NEXT_PUBLIC_RECENT_MONITOR_RESULTS_LIMIT=5000

# Playwright Config
PLAYWRIGHT_RETRIES=1
PLAYWRIGHT_WORKERS=3
PLAYWRIGHT_TRACE=on
PLAYWRIGHT_SCREENSHOT=on
PLAYWRIGHT_VIDEO=on
    
# Redis Config
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=supersecure-redis-password-change-this

#Better Auth Config
BETTER_AUTH_SECRET=better-auth-secret-key-change-this-in-prod
BETTER_AUTH_URL=http://localhost:3000 #Base URL of your app
SUPER_ADMIN_USER_IDS="4512347a-2ae6-413d-9cdc-91c22551ceb1,2b013c80-4fb4-4e9f-a3d1-48142e684dee"
SUPER_ADMIN_EMAILS=super.admin@yourdomain.com,super.admin2@yourdomain.com

# Email Configuration
# Control which email services are enabled
SMTP_ENABLED=false
RESEND_ENABLED=true

# SMTP Configuration using Resend's SMTP service
# Use your existing Resend API key as the SMTP password
SMTP_HOST=smtp.resend.com
SMTP_PORT=587
SMTP_USER=resend
SMTP_PASSWORD=your-resend-api-key-change-this-in-prod
SMTP_SECURE=false
SMTP_FROM_EMAIL=notification@yourdomain.com

# VARIABLES_ENCRYPTION_KEY
VARIABLES_ENCRYPTION_KEY=your-64-character-encryption-key-for-variable-secrets-change-this-in-prod

# =============================================================================
# AI FIX FEATURE CONFIGURATION (OPTIONAL)
# =============================================================================

# Enable/disable the AI-powered test fix functionality
NEXT_PUBLIC_AI_FIX_ENABLED=false

# AI Provider Configuration
# Only OpenAI is supported
AI_PROVIDER=openai

# AI Model Configuration
# Supported OpenAI models: gpt-4o, gpt-4o-mini (recommended), gpt-4-turbo, gpt-3.5-turbo
AI_MODEL=gpt-4o-mini

# API Keys (required if AI fix is enabled)
OPENAI_API_KEY=your-openai-api-key-here
