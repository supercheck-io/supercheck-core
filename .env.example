# Environment variables for Supercheck

# Better Auth Secret - REQUIRED for production
BETTER_AUTH_SECRET=your-super-secret-key-change-this-in-production

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/supercheck
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=supercheck

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=supersecure-redis-password-change-this
REDIS_URL=redis://:supersecure-redis-password-change-this@localhost:6379

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
RUNNING_CAPACITY=5
QUEUED_CAPACITY=50
TEST_EXECUTION_TIMEOUT_MS=900000
TRACE_RECOVERY_INTERVAL_MS=300000

# AWS S3 / MinIO Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
S3_ENDPOINT=http://localhost:9000
S3_JOB_BUCKET_NAME=playwright-job-artifacts
S3_FORCE_PATH_STYLE=true
S3_OPERATION_TIMEOUT=10000
S3_MAX_RETRIES=3

# Scheduler Configuration
DISABLE_JOB_SCHEDULER=false
DISABLE_MONITOR_SCHEDULER=false

# Email Configuration for Notifications
# The system supports two email delivery methods:
# 1. SMTP (Primary) - Traditional email server
# 2. Resend (Fallback) - Modern email API service

# Control which email services are enabled (true/false)
SMTP_ENABLED=true
RESEND_ENABLED=true

# SMTP Configuration (Primary email delivery method)
# For Gmail, use an App Password (requires 2FA enabled)
# Generate at: https://myaccount.google.com/security > App passwords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_SECURE=false
SMTP_FROM_EMAIL=your-email@gmail.com

# Resend Configuration (Fallback email delivery method)
# Sign up at https://resend.com and verify your domain
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxx
RESEND_FROM_EMAIL=notifications@yourdomain.com

# Environment variables for memory management
MAX_CONCURRENT_EXECUTIONS=2      # Limit concurrent test executions
MEMORY_THRESHOLD_MB=1536         # Memory warning threshold