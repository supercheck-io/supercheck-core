# Environment variables for Supercheck

# Better Auth Secret - REQUIRED for production
BETTER_AUTH_SECRET=your-super-secret-key-change-this-in-production

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/supercheck
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=supercheck

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=supersecure-redis-password-change-this
REDIS_URL=redis://:supersecure-redis-password-change-this@localhost:6379

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
RUNNING_CAPACITY=5
QUEUED_CAPACITY=50
TEST_EXECUTION_TIMEOUT_MS=900000

# Demo Mode Configuration
NEXT_PUBLIC_DEMO_MODE=false

# Notification Channel Limits
NEXT_PUBLIC_MAX_JOB_NOTIFICATION_CHANNELS=10
NEXT_PUBLIC_MAX_MONITOR_NOTIFICATION_CHANNELS=10

# AWS S3 / MinIO Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
S3_ENDPOINT=http://localhost:9000
S3_JOB_BUCKET_NAME=playwright-job-artifacts
S3_TEST_BUCKET_NAME=playwright-test-artifacts
S3_FORCE_PATH_STYLE=true
S3_OPERATION_TIMEOUT=10000
S3_MAX_RETRIES=3

# Playwright Artifact Configuration
# Control what artifacts are collected during test execution
# Options: 'on', 'off', 'retain-on-failure', 'only-on-failure'
PLAYWRIGHT_TRACE=on
PLAYWRIGHT_SCREENSHOT=on
PLAYWRIGHT_VIDEO=on

# Email Configuration for Notifications
# SMTP Configuration - Can use any SMTP provider including Resend's SMTP
# Examples:
# - Gmail: smtp.gmail.com (use App Password with 2FA enabled)
# - Resend SMTP: smtp.resend.com (use API key as password)
# - SendGrid: smtp.sendgrid.net
# - Amazon SES: email-smtp.region.amazonaws.com

# SMTP Configuration
SMTP_HOST=smtp.resend.com
SMTP_PORT=587
SMTP_USER=resend
SMTP_PASSWORD=your-api-key
SMTP_SECURE=false
SMTP_FROM_EMAIL=hello@yourdomain.com

# AI Fix Feature Configuration
# Enable/disable the AI-powered test fix functionality
AI_FIX_ENABLED=true

# AI Provider Configuration
# Provider: 'openai' or 'anthropic'
AI_PROVIDER=openai

# AI Model Configuration
# OpenAI models: gpt-4o-mini (recommended for cost), gpt-4o, gpt-4-turbo
# Anthropic models: claude-3-haiku-20240307, claude-3-sonnet-20240229
AI_MODEL=gpt-4o-mini

# AI API Keys
# At least one API key is required based on your chosen provider
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# AI Service Configuration
# Request timeout in milliseconds (default: 30 seconds)
AI_TIMEOUT_MS=30000

# Rate limiting for AI requests (per hour)
AI_MAX_REQUESTS_PER_HOUR=100
