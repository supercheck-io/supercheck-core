# Test Environment Variables
NODE_ENV=test
TZ=UTC

# Database (use test database)
DATABASE_URL=postgresql://test:test@localhost:5432/supercheck_test
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=test
DB_PASSWORD=test
DB_DATABASE=supercheck_test

# Redis (use different DB for tests)
REDIS_URL=redis://localhost:6379/1
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1

# Auth (test secrets)
NEXTAUTH_SECRET=test-secret-key-for-testing-only
NEXTAUTH_URL=http://localhost:3000

# AWS/S3 (mock values)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
S3_BUCKET_NAME=test-bucket
S3_ENDPOINT=http://localhost:9000

# App Configuration
RUNNING_CAPACITY=2
QUEUED_CAPACITY=10
TEST_EXECUTION_TIMEOUT_MS=10000


# Disable playground cleanup in tests
PLAYGROUND_CLEANUP_ENABLED=false

# Demo Mode Configuration
NEXT_PUBLIC_DEMO_MODE=false

# Notification Channel Limits
NEXT_PUBLIC_MAX_JOB_NOTIFICATION_CHANNELS=10
NEXT_PUBLIC_MAX_MONITOR_NOTIFICATION_CHANNELS=10

# Test-specific flags
VERBOSE_TESTS=false
DEBUG_TESTS=false